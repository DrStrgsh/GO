<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <small>
      <p>Created at: <time><%= post.created_at.to_date.strftime("%e %B, %Y") %></time></p>
      <p>Created by: <%= post.user.email %></p>
      <p><%= pluralize(post.comments.count, "Comment") %></p>
      <div class="panel-block views data">
          <span class="icon"><i class="fa fa-eye"></i></span>
          <%= pluralize(post.impressionist_count, 'View') %>
      </div>
    </small>
  </section>
</article>
