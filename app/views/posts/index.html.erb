	<h1 id="page_title">Forum</h1>

  <div id="posts_wrapper" class="skinny_wrapper">
    <% if user_signed_in? %>
      <%= link_to "New post", new_post_path, class: "button it-center" %>
    <% else %>
      <div id="posts_wrapper" class="skinny_wrapper">
        <p>To create a post, first <%= link_to 'Sign In', new_user_session_path, class: "link" %> or <%= link_to 'Sign Up', new_user_registration_path, class: "link" %> !</p>
      </div> 
    <% end %> 
    <hr>
    <div id="post-new">
    	<%= render @posts %>
    </div>
	</div>

		<%= will_paginate @posts %>

<% if user_signed_in? %>

  <%= form_for(@post, remote: true) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h5 class="text-center" id="myModalLabel">Fast Post</h5>
    <div id="fastpostnew" class="skinny_wrapper wrapper_padding">
      <%= f.label :image %>
      <%= f.file_field :image, class: "post_image" %>
			<br><br>

      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'post_title' %>
      <br>

      <%= f.label :summary %>
      <%= f.text_field :summary, class: 'post_summary textsum' %>
      <br>

      <%= f.label :body %>
		  <%= f.text_area :body, class: 'post_body textarea' %>
		  <br>

      <%= submit_tag "Create", class: "button", id: "mynewpostclose" %>
    </div>
  <% end %>
<% else %>
<div id="posts_wrapper" class="skinny_wrapper">
	<p>To create a post, first <%= link_to 'Sign In', new_user_session_path, class: "link" %> or <%= link_to 'Sign Up', new_user_registration_path, class: "link" %> !</p>
 </div> 
<% end %>	